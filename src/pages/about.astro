---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../components/Link.astro";
import Breathe from "../components/Breathe.astro";
---

<BaseLayout>
  <div class="img-wrapper">
    <img src="/gifs/seed.gif" />
  </div>
  <Breathe />
  <div class="not-found-container">
    <h5>About</h5>
    <p>
      emptyspaceheart.com is a<br />minimalist hub for Celeste resources.
    </p>
    <br />
    <p>
      Named after a fleeting heart,<br />it serves as a reminder — no matter<br
      />how much you’ve overcome, there’s<br />always more to discover,<br
      />more to climb.
    </p>
  </div>
  <br />
  <p class="suggestion">Want to add something? Suggest it via:</p>
  <Link
    icon="brand-github"
    text="GitHub Issues"
    url="https://github.com/jwnle31/emptyspaceheart/issues"
    internal={false}
  />
  <Breathe />
</BaseLayout>
<style>
  img {
    width: 1.25rem;
  }

  .img-wrapper {
    text-align: center;
  }

  .suggestion {
    margin-top: 5rem;
    margin-bottom: 1rem;
  }

  p {
    font-size: 0.75rem;
    line-height: 2rem;
  }

  h5 {
    margin-bottom: 1.25rem;
  }
</style>
